{

    "manifest_version": 2,

    "name": "Website Checks",
    "default_locale": "en",
    "description": "An extension to check the presence of a: site title, h1 tag, meta description, and no excess lorem ipsum or links",
    "version": "0.0.1",

    "browser_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        },
        "default_title": "Website Check",
        "default_popup": "popup.html"
    },

    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png"
    },

    "options_page": "options.html",
    "permisssions": [
      "activeTab",
      "storage",
      "tabs"
    ]
}